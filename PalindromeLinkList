#include <iostream>

struct Node {
    char x;
    Node *next;
};

class LinkedList{
    Node *head;
    
public:
    
    LinkedList(struct Node *head){
        this->head = head;
    }
    
    void addNode(struct Node *&head, char n){
        struct Node *NewNode = new Node;
        NewNode-> x = n;
        NewNode -> next = head;
        head = NewNode;
    }
    
    void initNode(struct Node *head, int n){
        head -> x = n;
        head -> next = NULL;
        
    }
};

