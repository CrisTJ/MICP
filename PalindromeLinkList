int listLength(){
    int cont = 0;
    return cont++;
}

int main(int argc, const char * argv[]) {
    
    //receives input from user
    std::string s;
    std::cin>> s;
    
    //creates link list
    Node *head = nullptr;
    LinkedList l(head);

    //inserts input from user to linkedlist
    for(int i = 1; i < s.length(); i++){
        l.addNode(head, s[i]);
    }
    
